{
  "name": "wj-waterfall-flow",
  "version": "1.0.1",
  "description": "A high-performance waterfall layout web component with infinite scroll",
  "type": "module",
  "main": "./dist/waterfall-flow.umd.js",
  "module": "./dist/waterfall-flow.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/waterfall-flow.js",
      "require": "./dist/waterfall-flow.umd.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev": "vite",
    "build": "npm run type-check && vite build && tsc -p tsconfig.build.json",
    "preview": "vite preview",
    "type-check": "tsc --noEmit",
    "release:patch": "npm version patch && git push --follow-tags",
    "release:minor": "npm version minor && git push --follow-tags",
    "release:major": "npm version major && git push --follow-tags"
  },
  "keywords": [
    "waterfall",
    "masonry",
    "layout",
    "web-component",
    "custom-element",
    "infinite-scroll",
    "responsive"
  ],
  "author": "wuhaoyue",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/wuhaoyue/wj-waterfall-flow.git"
  },
  "devDependencies": {
    "typescript": "^5.3.3",
    "vite": "^5.0.8"
  }
}
